<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pri.android.organiseworkforce.AllOffersByCurrentEmployerFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No Offers Submitted So Far. Submit a new offer now!"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/empty_recyclerview_textview"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/all_offers_recyclerview"/>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/plus"
        app:layout_anchorGravity="bottom|right|end"
        android:id="@+id/new_post_fab"/>

</FrameLayout>
